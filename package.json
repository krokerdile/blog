{
  "name": "hyunu-blog-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Hyunu's Blog Monorepo",
  "scripts": {
    "dev": "pnpm --filter \"./apps/*\" dev",
    "build": "pnpm --filter \"./packages/*\" build && pnpm --filter \"./apps/*\" build",
    "build:ui": "pnpm --filter @hyunu/ui build",
    "build:apps": "pnpm --filter \"./apps/*\" build",
    "clean": "pnpm -r clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "^1.11.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
